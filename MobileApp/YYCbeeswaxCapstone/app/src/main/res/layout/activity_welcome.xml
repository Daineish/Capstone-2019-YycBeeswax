<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:rowCount="2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/camerasButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bee_grayscale"
                android:onClick="camerasClicked"
                android:text="Cameras"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="#000000" />

            <Button
                android:id="@+id/sensorsButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/sensor_grayscale"
                android:onClick="sensorsClicked"
                android:text="Sensors"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="#000000" />

            <Button
                android:id="@+id/alertsButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/alert_grayscale"
                android:onClick="alertsClicked"
                android:text="Alerts"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="#000000" />

            <Button
                android:id="@+id/hivesButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/hives_grayscale"
                android:onClick="hivesClicked"
                android:text="Hives"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="#000000" />

            <Button
                android:id="@+id/stakeholdersButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/beekeepers_grayscale"
                android:onClick="stClicked"
                android:text="Stakeholders"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="#000000" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>